colvarsTrajFrequency    500000
colvarsRestartFrequency 500000


colvar {
  name phi

  width 1.0
  lowerboundary -180
  upperboundary 180
	
  extendedlagrangian   on
  extendedFluctuation  5.0
  extendedTimeConstant  200

  dihedral {
    onesiteTotalForce
    group1 { 
      atomnumbers 13
    }
    group2 { 
      atomnumbers 15
    }
    group3 { 
      atomnumbers 17
    }
    group4 { 
      atomnumbers 1
    }
  }
}

colvar {
  name psi

  width 1.0
  lowerboundary -180
  upperboundary 180

  extendedlagrangian   on
  extendedFluctuation  5.0
  extendedTimeConstant  200

  dihedral {
    onesiteTotalForce
    group1 { 
      atomnumbers 3
    }
    group2 { 
      atomnumbers 1
    }
    group3 { 
      atomnumbers 17
    }
    group4 { 
      atomnumbers 15
    }
  }
}

metadynamics {
  colvars phi psi
  hillWidth 30.0
  hillWeight 0.5
}


